#!/bin/bash

#compiling framework
javac -g -verbose -sourcepath .:shared/ applet/*.java
javac -g -verbose -cp servlet/libs/servlet-api.jar -sourcepath .:shared/ servlet/*.java
javac -g -verbose shared/*.java

#compiling my applet/servlet
javac -g -verbose -sourcepath .:applet/:shared/ example/applet/*.java
javac -g -verbose -cp servlet/libs/servlet-api.jar -sourcepath .:shared/:servlet/ example/servlet/*.java
javac -g -verbose -sourcepath . example/shared/*.java

#copying to tomcat

#removing old files but remaking those necessary
sudo rm -vr /usr/share/tomcat7/webapps/simulation/*
sudo mkdir -v --parents /usr/share/tomcat7/webapps/simulation/WEB-INF/classes/

#copying framework to tomcat
#applet
sudo cp -av --parents applet /usr/share/tomcat7/webapps/simulation/
#servlet
sudo cp -av --parents servlet /usr/share/tomcat7/webapps/simulation/WEB-INF/classes/
#shared
sudo cp -av --parents shared /usr/share/tomcat7/webapps/simulation/WEB-INF/classes/
sudo cp -av --parents shared /usr/share/tomcat7/webapps/simulation/

#copying my applet/servlet to tomcat
#website
sudo cp -av index.html /usr/share/tomcat7/webapps/simulation/
sudo cp -av web.xml /usr/share/tomcat7/webapps/simulation/WEB-INF/
#my applet
sudo cp -av --parents example/applet /usr/share/tomcat7/webapps/simulation/
#my servlet
sudo cp -av --parents example/servlet /usr/share/tomcat7/webapps/simulation/WEB-INF/classes/
#my shared
sudo cp -av --parents example/shared /usr/share/tomcat7/webapps/simulation/WEB-INF/classes/
sudo cp -av --parents example/shared /usr/share/tomcat7/webapps/simulation/

#start up tomcat (default is off)
sudo sh /usr/share/tomcat7/bin/catalina.sh start &

#view website
#chromium-browser localhost:8080/simulation/index.html
sleep 0.5
firefox -new-window localhost:8080/simulation/index.html
cat

#shutdown tomcat (return to default)
sudo sh /usr/share/tomcat7/bin/catalina.sh stop
